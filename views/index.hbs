<h2>Todo page</h2>

{{#if todos.length}}
<ul>
    {{#each todos}}
    <li class="todo">
        <label>
            {{#if completed}}
            <input type="checkbox" checked>
            <span type="completed">{{title}}</span>
            {{else}}
            <input type="">
            <span>{{title}}</span>
            {{/if}}

            <button class="btn btn-small">Save</button>
        </label>
    </li>
    {{/each}}
</ul>
{{else}}
<p>No todos!</p>
{{/if}}